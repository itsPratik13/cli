{
  "compilerOptions": {
    "target": "ES2020",                  // Modern JS target
    "module": "NodeNext",                // ESM support
    "moduleResolution": "NodeNext",
    "outDir": "dist",                    // Compiled JS output
    "rootDir": "src",                    // Source folder
    "strict": true,                       // Enable all strict checks
    "esModuleInterop": true,             // For import compatibility
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,                // Skip node_modules type checking
    "resolveJsonModule": true,           // Import JSON files
    "sourceMap": true,                   // For debugging
    "declaration": true,                 // Generate .d.ts files
    "declarationMap": true,              // Map .d.ts back to TS
    "noUncheckedIndexedAccess": true,    // Stricter indexing
    "exactOptionalPropertyTypes": true,  // Stricter optional checks
    "isolatedModules": true,             // Required for TSX / ESM
    "verbatimModuleSyntax": true,
    "moduleDetection": "force"
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
